<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GOCompanies</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.css" />
    <!-- js only -->
    <link rel="stylesheet" href="~/js/bootstrap/bootstrap.js" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">GOCompanies</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Company">Companies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Vehicle">Vehicles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Driver">Drivers</a>
                </li>
            </ul>
            <ul id="navbar" class="nav navbar-nav  navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Companies
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu" >
                       @foreach (var item in GOCompanies.Controllers.BaseController._Companies)
                            {
                               <li><a class="nav-link" href="/home/changeCompany/@item.Value">@item.Text</a></li>
                            }

                            @*@Html.DropDownListFor(x => x._company, Model.CompanyList, new { @class = "navbar-nav" })*@
                    </ul>
                </li>
            </ul>

       </div>
   </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/siteV.js" asp-append-version="true"></script>
    
   

    @RenderSection("Scripts", required: false)
</body>
</html>
